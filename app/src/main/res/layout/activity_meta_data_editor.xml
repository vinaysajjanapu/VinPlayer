<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_meta_data_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vinay.vinplayer.activities.MetaDataEditor">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/transparentLightBlack"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/metadata_albumart"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done Editing / SAVE"
                android:id="@+id/metadata_submit"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Song Title"
                android:id="@+id/metaedit_title"
                app:met_floatingLabelTextColor
                    ="@android:color/white"
                app:met_floatingLabelAlwaysShown="true"
                app:met_textColor="@android:color/white"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Album Name"
            android:id="@+id/metaedit_album"
            app:met_floatingLabelTextColor="@android:color/white"
            app:met_textColor="@android:color/white"
            app:met_floatingLabelAlwaysShown="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Artist Name"
                android:id="@+id/metaedit_artist"
                app:met_floatingLabelTextColor="@android:color/white"
                app:met_textColor="@android:color/white"
                app:met_floatingLabelAlwaysShown="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="Genre"
                app:met_floatingLabelTextColor="@android:color/white"
                app:met_textColor="@android:color/white"
                android:id="@+id/metaedit_genre"
                app:met_floatingLabelAlwaysShown="true"/>




        </LinearLayout>
    </ScrollView>
</RelativeLayout>
