<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ui__settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vinay.vinplayer.activities.settings.UI_Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/ui_settings_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/settings_head"
                android:layout_margin="@dimen/ui_settings_head_margin"
                android:gravity="center"
                android:text="@string/ui"/>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/minimalui_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="@string/minimal_ui"/>
                    <RadioButton
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:id="@+id/standardui_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/standard_ui"/>
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/ui_settings_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/settings_head"
                    android:gravity="center"
                    android:layout_margin="@dimen/ui_settings_head_margin"
                    android:text="@string/img_quality"/>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/img_qual1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="Low"/>
                    <RadioButton
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:id="@+id/img_qual2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standard"/>

                    <RadioButton
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:id="@+id/img_qual3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"/>
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_settings_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/ui_settings_head_margin"
                    android:textColor="@color/settings_head"
                    android:text="@string/background"/>


                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/colorbg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="@string/color"/>
                    <RadioButton
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:id="@+id/monotonebg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/black_and_white"/>
                </RadioGroup>

                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/adaptive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="@string/adaptive_background"/>
                    <RadioButton
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:id="@+id/fixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fixed_background"/>
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:src="@drawable/albumart_default"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/albumart_default"
                        android:scaleType="centerCrop"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/albumart_default"
                        android:scaleType="centerCrop"/>

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/albumart_default"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/img1"
                        android:layout_width="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/img2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="70dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/img3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="70dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/img4"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="70dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </RadioGroup>

            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_settings_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/ui_settings_head_margin"
                    android:textColor="@color/settings_head"
                    android:text="@string/now_playing_layout"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="120dp"
                            android:src="@drawable/albumart_default"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"/>

                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/albumart_default"
                            android:scaleType="centerCrop"/>

                        <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/albumart_default"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>
                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/npl1"
                            android:layout_width="70dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/npl2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/npl3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/show_on_screen_volume_controller"
                    android:layout_margin="10dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_settings_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/ui_settings_head_margin"
                    android:textColor="@color/settings_head"
                    android:text="@string/button_style"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:src="@drawable/albumart_default"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"/>

                    <ImageButton
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/albumart_default"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/bl1"
                        android:layout_width="150dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/bl2"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="150dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:src="@drawable/albumart_default"
                        android:layout_margin="5dp"
                        android:scaleType="centerCrop"/>

                    <ImageButton
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/albumart_default"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/bl3"
                        android:layout_width="150dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/bl4"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="150dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_settings_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/settings_head"
                    android:gravity="center"
                    android:layout_margin="@dimen/ui_settings_head_margin"
                    android:text="@string/notification_style"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/albumart_default"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"/>

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/albumart_default"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>
                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/bn1"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_horizontal"
                            android:layout_height="90dp"/>
                        <RadioButton
                            android:id="@+id/bn2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_height="70dp"/>
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ui_settings_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/ui_settings_head_margin"
                    android:textColor="@color/settings_head"
                    android:text="@string/font_style"/>
                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/font1"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="@dimen/font_style_margintop"
                            android:textSize="@dimen/fontstye_demo_size"
                            android:text="@string/fontstyledemo_font"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/font2"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/font_style_margintop"
                            android:textSize="@dimen/fontstye_demo_size"
                            android:layout_marginRight="5dp"
                            android:text="@string/fontstyledemo_font"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/font3"
                            android:textSize="@dimen/fontstye_demo_size"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="@dimen/font_style_margintop"
                            android:text="@string/fontstyledemo_font"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/font4"
                            android:textSize="@dimen/fontstye_demo_size"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/font_style_margintop"
                            android:text="@string/fontstyledemo_font"
                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
